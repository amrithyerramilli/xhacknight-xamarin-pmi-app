<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Match.AI.HomePage">
  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness"
                iOS="20, 40, 20, 20"
                Android="20, 20, 20, 20"
                WinPhone="20, 20, 20, 20" />
  </ContentPage.Padding>
  <ContentPage.Content>
    <StackLayout VerticalOptions="FillAndExpand"
                 HorizontalOptions="FillAndExpand"
                 Orientation="Vertical"
                 Spacing="15">
      <Button x:Name="loginButon" Text="Login" Clicked="OnLogin" />
      <Button x:Name="profileButton" Text="Profile" IsEnabled="true" Clicked="OnProfile" />
      <Button x:Name="reviewsButton" Text="Personalized Reviews" IsEnabled="true" Clicked="OnReviews" />
    </StackLayout>
  </ContentPage.Content>
</ContentPage>